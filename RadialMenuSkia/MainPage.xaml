<?xml version="1.0" encoding="utf-8" ?>
<ContentPage ios:Page.UseSafeArea="True"
             x:Class="RadialMenuSkia.MainPage"
             x:DataType="viewModels:MainPageViewModel"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RadialMenuSkia.ViewModels"
             xmlns:pickers="clr-namespace:RadialMenuSkia.Pickers"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core">
    <ContentPage.BindingContext>
        <viewModels:MainPageViewModel />
    </ContentPage.BindingContext>
    <pickers:RadialMenu ItemSource="{Binding ItemSource}" />
</ContentPage>